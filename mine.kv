WindowManager:
    OptWindow:
    SecondWindow:



<CustomLayout>
    canvas.before:
        BorderImage:

            border: 10, 10, 10, 10
            texture: self.background_image.texture
            pos: self.pos
            size: self.size


<OptWindow>:
    name:"play"

    CustomLayout:
        size_hint: 1,1
        pos_hint:{'center_x':0.5,'center_y':0.5}
        cols:1


        Label:

            text:"How are you feeling today.......!"
            font_size:40
            text_size:self.size
            color:0,0,0,1
            halign:'center'
            valign: 'center'


        Button:
            text:"Click to know"
            background_color: 0.81, 0.27, 0.33, 1
            size_hint:0.3,.3
            halign:'justify'
            valign:'bottom'
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<CustomLayout2>
    canvas.before:
        BorderImage:
            texture: self.background_image.texture
            pos: self.pos
            size: self.size

<SecondWindow>:
    name: "second"
    CustomLayout2:
        size_hint: 1,1
        pos_hint:{'center_x':0.5,'center_y':0.5}
        cols:1
        Button:
            text:"Click Here"
            size_hint:0.3,0.3
            pos_hint: {'center_x': .5, 'center_y': .5}
            background_color: 0.81, 0.27, 0.33, 1
            halign:'left'
            valign:'center'
            on_release:
                root.plays()

        Button:
            text:"Go Back"
            font_size:40
            text_size:self.size
            halign:'center'
            valign:'bottom'
            background_color: 0.81, 0.27, 0.33, 1
            size_hint:1,0.1

            on_release:
                root.sound.stop()
                app.root.current = "play"

                root.manager.transition.direction = "right"


